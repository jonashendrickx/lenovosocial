<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lenovo.social"
    android:versionCode="8"
    android:versionName="0.8" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lenovo.social.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lenovo.social.socialevent.SocialEventReaderActivity"
            android:label="@string/social_events"
            android:parentActivityName="com.lenovo.social.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lenovo.social.MainActivity" />
        </activity>
        <activity android:name="com.lenovo.social.SettingsActivity" >
        </activity>
        <activity
            android:name="com.lenovo.social.giveaway.GiveawayActivity"
            android:label="@string/giveaways"
            android:parentActivityName="com.lenovo.social.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lenovo.social.MainActivity" />
        </activity>
        <activity android:name="com.lenovo.social.release.ReleaseActivity" android:label="@string/releases" android:parentActivityName="com.lenovo.social.MainActivity"></activity>
    </application>

</manifest>
